<!DOCTYPE html>
<html>
    <%- include('partials/head') %>
    <%- include('partials/header') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
        <div class="container">
            <div class="mt-4">
                <% idEdit.forEach(function (id) { %>  
                <form class="col-8 border border-dark rounded p-3 m-auto" method="POST" action="/cat/<%= id.ID %>?_method=PUT">                                               

                    <div class="form-group">
                        <label for="book">Book</label>
                        <input type="text" class="form-control" name="book" id="nameCat" value="<%= id.Book %>">
                    </div>

                    <div class="form-group">
                        <label for="auhor">Author</label>
                        <input type="text" class="form-control" name="author" id="author" value="<%= id.Author %>">
                    </div>

                    <div class="form-group">
                        <label for="availabe">Category</label>
                        <select id="category" name="category" class="form-control">
                          <option selected>Novel</option>
                          <option> Language</option>
                          <option> Mother & Baby</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="picture">Picture</label>
                        <input type="text" class="form-control" name="picture" id="picture" value="<%= id.Picture %>" >
                    </div>

                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea class="form-control" name="content" id="content"><%= id.Content %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" class="form-control" name="location" id="location" value="<%= id.Location %>" >
                    </div>

                    <div class="form-group">
                        <label for="availabe" >Availabe</label>
                        <select id="availabe" name="availabe" class="form-control">
                          <option selected>Availabe</option>
                          <option class="btn btn-danger"> Not</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                    
                </form> 
                <% }) %>  
            </div> 
        </div>

    <%- include('partials/footer') %>
</html>
